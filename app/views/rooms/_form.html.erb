<%= form_for @room do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.text_field :name, class: 'form-control', :required => true, :placeholder => "Nazwa" %>
    <%= f.select :category_id, options_for_select(@categories, @room.category_id), {:include_blank => "Kategoria"}, {:class => "form-control"} %>

    <%= f.submit "Zapisz", :class => "btn btn-danger btn-lg btn-block" %>

<% end %>

