<%= form_for @question do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.text_area :content, class: 'form-control', :required => true, :placeholder => "Treść" %>
    <%= f.select :category_id, options_for_select(@categories, @question.category_id), {:include_blank => "Kategoria"}, {:class => "form-control"} %>
    <%= f.hidden_field :confirmed, :value => true %>

    <%= f.submit "Zapisz", :class => "btn btn-danger btn-lg btn-block" %>

<% end %>

