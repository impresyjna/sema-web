<div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 card">
  <div class="inner">
    <div class="table-responsive">
      <table class="table table-condensed" id="card">
        <thead>
        <tr>
          <th class="col-sm-1"></th>
          <th class="col-sm-11">
            <%= link_to "<i class='fa fa-pencil fa-2x'></i>".html_safe, edit_card_path(card) %>
            <%= link_to "<i class='fa fa-trash fa-2x'></i>".html_safe, card, method: :delete %>
          </th>
        </tr>
        </thead>
        <tbody>
        <% @number = 1 %>
        <% card.question_in_cards.each do |question| %>
            <tr>
              <td><%= @number %></td>
              <td><%= question.question.content %></td>
              <% @number = @number + 1 %>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

